datasource postgresql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  isAdmin   Boolean   @default(false)
  password  String
  createdAt DateTime? @default(now())
}

model Product {
  id                    String     @id @default(cuid())
  name                  String     @default("")
  picture               Json?
  description           Json       @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  price                 Int
  from_LineItem_product LineItem[] @relation("LineItem_product")
}

model LineItem {
  id         String    @id @default(cuid())
  product    Product?  @relation("LineItem_product", fields: [productId], references: [id])
  productId  String?   @map("product")
  quantity   Int
  purchase   Purchase? @relation("LineItem_purchase", fields: [purchaseId], references: [id])
  purchaseId String?   @map("purchase")

  @@index([productId])
  @@index([purchaseId])
}

model Purchase {
  id           String     @id @default(cuid())
  student      String     @default("")
  phoneNumber  String     @default("")
  receiptImage Json?
  lineItems    LineItem[] @relation("LineItem_purchase")
  status       String?    @default("pending")
  notes        String     @default("")
  createdAt    DateTime?  @default(now())
  updatedAt    DateTime?  @updatedAt
}
